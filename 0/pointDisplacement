FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0.01";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    atmosphere
    {
        type            uniformFixedValue;
        uniformValue    (0 0 0);
    }

    inlet
    {
        type            uniformFixedValue;
        uniformValue    (0 0 0);
    }

    outlet
    {
        type            uniformFixedValue;
        uniformValue    (0 0 0);
    }

    bottom
    {
        type            uniformFixedValue;
        uniformValue    (0 0 0);
    }

    flapper
    {
        type            angularOscillatingDisplacement;
        omega           6.2831853;
        axis            (0 0 1);
        origin          (3 -2.44 0.05);
        angle0          0;
        amplitude       -0.1;
        value           uniform (0 0 0);
    }

    frontBack
    {
        type            empty;
    }
}


